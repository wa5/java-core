import java.io.FileInputStream;  //import io  class
public class readingalldatafromf {  
     public static void main(String args[]){    
          try{    
            FileInputStream fin=new FileInputStream("D:\\abc.txt"); //create objet   
            int i=0;    
            while((i=fin.read())!=-1){    
             System.out.print((char)i);    
            }    
            fin.close();    
          }catch(Exception e){System.out.println(e);}    
         }    
        } 
